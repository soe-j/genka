#!/usr/bin/env bash

set -eu

case $1 in
  init )
    GENKA_ROOT=$(dirname $0)/..
    . $GENKA_ROOT/libexec/genka-init
    ;;
  config | create | load )
    LIBEXEC_PATH=$GENKA_ROOT/libexec
    . $LIBEXEC_PATH/genka-$@
    ;;
  * )
    LIBEXEC_PATH=$GENKA_ROOT/libexec
    . $LIBEXEC_PATH/genka-record $1 $2
    ;;
esac
